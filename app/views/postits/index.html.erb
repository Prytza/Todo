<h1>Listing postits</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Status</th>
    <th>Deadline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @postits.each do |postit| %>
  <tr>
    <td><%= postit.title %></td>
    <td><%= postit.content %></td>
    <td><%= postit.status %></td>
    <td><%= postit.deadline_timestamp.to_formatted_s(:short) %></td>
    <td><%= link_to 'Show', postit %></td>
    <td><%= link_to 'Edit', edit_postit_path(postit) %></td>
    <td><%= link_to 'Destroy', postit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

